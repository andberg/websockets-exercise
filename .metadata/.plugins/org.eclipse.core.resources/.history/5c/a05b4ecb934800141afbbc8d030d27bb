package se.berglund.datastorage;

import java.util.ArrayList;
import java.util.Collections;

import javax.transaction.Transactional;

import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.hibernate.Transaction;
import org.hibernate.cfg.Configuration;

import se.berglund.models.Whiteboard;

public class WhiteboardManager {
	static SessionFactory sf = new Configuration().configure()
			.buildSessionFactory(null);
	static Session session = sf.openSession();
	private static ArrayList<Whiteboard> allWhiteboards = (ArrayList<Whiteboard>) Collections
			.synchronizedList(new ArrayList<Whiteboard>());

	@Transactional
	public static ArrayList<Whiteboard> getAllWhiteboards() {
		// ArrayList<Whiteboard> allWhiteboards =
		Transaction tx = null;
		try {
			tx = session.beginTransaction();

			tx.commit();
		} catch (Exception e) {
			if (tx != null)
				tx.rollback();
			e.printStackTrace();
			return null;

		} finally {
			session.close();
		}
	}

	public void addWhiteboard(Whiteboard whiteboard) {
		allWhiteboards.add(whiteboard);
	}

	public void updateWhiteboard(Whiteboard whiteboard) {

	}

	public void deleteWhiteboard(Whiteboard whiteboard) {

	}

	public void createWhiteboard(Whiteboard whiteboard) {

	}

}
