package se.berglund.datastorage;

import java.util.ArrayList;

import se.berglund.models.Whiteboard;

public class DataStorage {

	public DataStorage() {
	};

	private static ArrayList<Whiteboard> allWhiteboards = new ArrayList<Whiteboard>();

	public static ArrayList<Whiteboard> getAllWhiteboards() {
		return allWhiteboards;
	}

	public static void addToWhiteboard(Whiteboard whiteboard) {
		allWhiteboards.add(whiteboard);
	}

	public static void deleteFromWhiteboard(Whiteboard whiteboard) {
		allWhiteboards.remove(whiteboard.getId());
	}

	public static void updateWhiteboard(Whiteboard whiteboard) {
		Whiteboard oldWhiteboard = allWhiteboards.get(whiteboard.getId());
		oldWhiteboard.setName(whiteboard.getName());
		allWhiteboards.add(oldWhiteboard); 
	}

}
